{
  "parser"  : "babel-eslint",
  "extends" : ["airbnb"],
  "rules": {
    // Soften rules for legacy projects. Can be removed for clean project.
    "comma-dangle": 0,
    "curly": 0,
    "default-case": 0,
    "max-len": [2, 160, 4],
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
    "no-floating-decimal": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "no-unused-expressions": 0,
    "no-use-before-define": [2, "nofunc"],
    "object-curly-spacing": [2, "never"],
    "object-shorthand": 0,
    "padded-blocks": 0,
    // React
    "react/sort-comp": 0, // Not ready yet
    "react/jsx-no-bind": 0
  },
  "globals": {
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "require": false
  }
}
